<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trippo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/bg</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <style name="HeaderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainTextHeader">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainText">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondHeaderTExtStyle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="TintTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle">
        <item name="backgroundColor">@color/green</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="InputStyle">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">335dp</item>
    </style>
</resources>